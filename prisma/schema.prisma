generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id          String   @id @default(cuid())
  name        String
  address     String?
  category    String?
  website     String?
  phone       String?
  email       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  leads       Lead[]

  @@index([name])
  @@index([phone])
  @@index([website])
}

model Lead {
  id               String   @id @default(cuid())
  businessId       String
  business         Business @relation(fields: [businessId], references: [id])
  industry         String
  painPoint        String
  suggestedMessage String
  dispatchedAt     DateTime?
  createdAt        DateTime @default(now())
}

model QueryHistory {
  id        String   @id @default(cuid())
  location  String
  industry  String
  query     String
  createdAt DateTime @default(now())

  @@unique([location, industry])
}
